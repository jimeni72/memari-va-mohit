<p id="notice"><%= notice %></p>

  <h1 style="margin-right:5%">لیست پروژه</h1>

<div style="height:850px;">
                <table class="table table-striped table-hover">
                <thead>
                <tr>
                <th >
                     عکس
                  </th>
                 <th >
                     زمان پایان
                  </th>
                  <th>
                     زمان شروع
                  </th>
                  
                   <th>
                     نام پروژه ها
                  </th>
                 
                </tr>
                </thead>
        <tbody>
        <tr>
                <% current_user.projects.all.each do |project| %>
                <th ><%= project.name %></th>
                <th ><%= project.start_time %></th>
                <th ><%= project.end_time %></th>
                <th ><%= image_tag project.avatar.url , style:"width:16%;height:26%;"%></th>
                <th ><%= link_to 'جزئيات بیشتر', project , class:"btn btn-sh green hidden-print margin-bottom-5"%></th>
                <th ><%= link_to 'ویرایش', edit_project_path(project) , class:"btn btn-sh blue hidden-print margin-bottom-5" %></th>

                <th ><%= link_to 'گزارش ها', project, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-sh red hidden-print margin-bottom-5" %></th>
                
                        </tr>
                      <% end %>
            </tbody>
                

              </table>
              <%if not current_user.nil? and current_user.role == 'ناظر' %>
                <%= link_to 'ایجاد پروژه', new_project_path ,class:"action-button shadow animate green"%>
                  <%end%>

              </div>


