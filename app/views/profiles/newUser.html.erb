
<!-- multistep form -->
<!-- <form id="mmsform">  -->
<%= form_for(@user  , url: addUser_profiles_path ,:html => {:class => "mmsform"}) do |f| %>
  <!-- progressbar -->
  <!-- <ul id="progressbar">
    <li class="active">Account Setup</li>
    <li>Social Profiles</li>
    <li>Personal Details</li>
  </ul> -->
  <!-- fieldsets -->
  <fieldset >
    <legend><span class="number">1</span>فرم ثبت نام</legend>
    <h3 class="fs-subtitle"></h3>
    <%= f.email_field :email, autofocus: true , placeholder:"ایمیل"  , style: "direction:rtl;" %>
<!--     <input type="text" name="email" placeholder="Email" /> -->


<!--    <input type="password" name="pass" placeholder="Password" />  -->
   <%= f.password_field :password, autocomplete: "off" ,placeholder:"رمز عبور"  , style: "direction:rtl;"%> 

<!--    <input type="password" name="cpass" placeholder="Confirm Password" />  -->
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:" تکرار رمز عبور"  , style: "direction:rtl;"%>

  <div class="field">
    <%= f.label :role %><br />
    <%= f.label :role, "ناظر", :value => "ناظر" %>
    <%= f.radio_button :role, "ناظر" %>
    <%= f.label :role, "کارفرما", :value => "کارفرما" %>
    <%= f.radio_button :role, "کارفرما", :checked => true %>
  </div>

 
     <%= f.text_field :company_name    ,placeholder:"نام شرکت" ,style: "direction:rtl;" %>
 

     <%= f.number_field :work_experience    ,placeholder:"سابقه کاری" ,style: "direction:rtl;"%>

     <%= f.text_field :register_number     ,placeholder:"شماره ثبت" ,style: "direction:rtl;"%>

     <%= f.text_field :tel    ,placeholder:"شماره تلفن",style: "direction:rtl;" %>

 
     <%= f.text_field :fax     ,placeholder:"شماره فکس" ,style: "direction:rtl;"%>

  <label class="control-label" >عکس</label>
     <%= f.file_field :avatar  ,style: "direction:rtl;" %>
 
    <%= f.submit "ذخیره"  , type:"submit" ,class: "btn_3" %>
    
 <!--  </div> -->


  </fieldset>



<!--  </form> --> 
<%end%>
      

