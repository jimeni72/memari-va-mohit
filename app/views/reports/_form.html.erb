
<div style="height:1000px">
                      
                         
      <h1 style="margin-left:50%"> فرم ایجاد گزارش </h1>
                      <div class="portlet-body form register span6">
                        <!-- BEGIN FORM-->
                      <%= form_for(@report) do |f| %>
                        <% if @report.errors.any? %>
                          <div id="error_explanation">
                            <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

                            <ul>
                            <% @report.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                            <% end %>
                            </ul>
                          </div>
                        <% end %>
                        <!-- <form > -->
                          <div class="form-body">
                            <div class="form-group">
                              <p class="contact"><label class="control-label">نام پروژه</label></p>
                              <select name="report[name_project]">
                              <%#byebug%>
                                <%current_user.nazer_projects.all.each do |p| %>
                                
                                  <%if not p.nil? %>
                                    <option value="<%=p.name%>"><%=p.name%></option>
                                  <%end%>
                                <%end%>
                              </select>
                              <%#= f.select :user_id, select_tag(:user_id, @profiles_name) %>
<!--                               <input type="text" class="form-control" placeholder="Enter text"> -->
                            </div>
                            <div class="form-group">
                              <p class="contact"><label class="control-label">عنوان گزارش</label></p>
                              <%= f.text_field :title_report , class: "form-control"  ,placeholder:"عنوان گزارش" %>
<!--                               <input type="text" class="form-control" placeholder="Enter text"> -->
                            </div>

                            <div class="form-group">
                             <p class="contact"> <label class="control-label"> قسمت مربوطه: </label></p>
                              <%= f.text_field :subject , class: "form-control"   %>
<!--                               <input type="text" class="form-control" placeholder="Enter text"> -->
                            </div>

                            <div class="form-group">
                             <p class="contact"> <label class="control-label">توضیحات</label></p>
                              <%=  f.text_area :description , class: "form-control"   %>
<!--                               <input type="text" class="form-control" placeholder="Enter text"> -->
                            </div>




                            <div class="form-group">
                              <p class="contact"><label class="control-label" >آپلود گزارش</label></p>
                              <%= f.file_field :document ,class: "form-control spinner" %>
                              <!-- <input type="password" class="form-control spinner" placeholder="Password"> -->
                            </div>
                            
                            <!-- <div class="form-group last">
                              <label class="control-label">Static Control</label>
                              <p class="form-control-static">
                                 email@example.com
                              </p>
                            </div> -->
                          </div>
                          <div class="form-actions right">
                          <%= f.submit  "ایجاد گزارش" ,style: "width:24%;background-color:#8e5fa2;color:white;line-height:191%;" , class: "btn-md"%>
<!--                             <button type="submit" class="btn green">Submit</button>
                            <button type="button" class="btn default">Cancel</button> -->
                          </div>
                          <% end %>
                        <!-- </form> -->
                        <!-- END FORM-->
                      </div>
</div>

